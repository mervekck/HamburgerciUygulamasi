@using HamburgerciUygulamasi.UI.Areas.AdminArea.Models.VM
@model ExtraIndexVM
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h2 class="mb-3">@ViewData["Title"]</h2>


<div id="content">
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Data Tables</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Picture</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Extras)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Price</td>
                                        <td>
                                            @if (item.Picture != null && item.Picture.Length > 0)
                                            {
                                                <img src="data:image;base64,@(Convert.ToBase64String(item.Picture))" alt="Post Image" />
                                            }

                                        </td>
                                        <td>
                                            <a href="/AdminArea/Extra/Edit/@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                            <a href="/AdminArea/Extra/Remove/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div style="text-align: right; margin-right: 10px;">
                        <a href="/AdminArea/Extra/Add" class="btn btn-primary">Create New Extra</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
